  body
    .login-container
      button.back-btn(type="button", onclick="window.history.back()", title="Back to Dashboard")
        i.fas.fa-arrow-left

      .login-header
        .logo
          i.fas.fa-recycle
        h1 Waste2Wings
        p Admin Portal Access

      //- Optional success or error messages from server
      if error
        .error-message #{error}
      if success
        .success-message #{success}

      //- Server-handled login
      form.login-form#loginForm(method="POST", action="/admin/login")
        .form-group
          label(for="email") Email Address
          i.fas.fa-envelope
          input#email(type="email", name="email", placeholder="admin@wastetowings.com", required, autocomplete="email")

        .form-group
          label(for="password") Password
          i.fas.fa-lock
          input#password(type="password", name="password", placeholder="Enter your password", required, autocomplete="current-password")

        .forgot-password
          a(href="#", onclick="alert('Please contact admin to reset your password.')") Forgot Password?

        button.login-btn#loginButton(type="submit")
          i.fas.fa-sign-in-alt
          | Sign In to Dashboard

      .divider
        span New to Waste to Wings?

      .register-link
        | Don't have an account?
        a(href="#", onclick="alert('Please contact your administrator to register.')") Create Account
